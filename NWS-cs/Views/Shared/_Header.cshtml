
@{
    ViewBag.Title = "_Header";
}

<div class="contain-to-grid fixed topbar">
    <nav class="top-bar">
        <a href="~/Home/Index">
            <img class="deerLogo hide-for-small-only left"
                 src="~/Content/Images/deer-logo-256px.jpeg"
                 alt="Deerpark logo" />
        </a>

        <a class="main-logo left"
           href="~/Home/Index">
            <!-- id dpnaText is styled by a reactive routine in MyScripts.js -->
            <h4 id="dpnaText">Deer Park Neighborhood Association</h4>
        </a>

        <a class="menuButton button right"
           data-options="ignore_repositioning is_hover:false"
           data-dropdown="mydrop">
            <i class="fi-list"></i>
        </a>

        <ul id="mydrop" class="f-dropdown right" data-dropdown-content>
            <li>@Html.ActionLink("Home Page", "Index", "Home")</li>
            <li>@Html.ActionLink("Officers", "Index", "Officer")</li>
            <li>@Html.ActionLink("Services", "Index", "Service")</li>
            <li>@Html.ActionLink("Archives", "Index", "Archive")</li>
            <li>@Html.ActionLink("Edit Content", "Index", "Edit")</li>
        </ul>
    </nav>
</div>
